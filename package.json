{
  "name": "adguard-home",
  "version": "1.0.0",
  "description": "AdGuard Home Control Panel",
  "main": "main.js",

  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },

  "author": "MinhHanIT",
  "license": "ISC",

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },

  "build": {
    "appId": "com.han.adguard-home",
    "productName": "AdGuard Home",

    "directories": {
      "buildResources": "build"
    },

    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },

    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AdGuard Home"
    }
  }
}
